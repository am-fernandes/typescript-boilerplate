{
  "name": "typescript-project-template",
  "version": "1.0.0",
  "description": "A starter template for TypeScript projects  :hourglass_flowing_sand::clipboard:",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --runInBand src/tests",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify src/app.ts",
    "build": "./node_modules/.bin/babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/app.js"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/am-fernandes/typescript-project-template.git"
  },
  "author": "Matheus Alexandre de Sena",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/am-fernandes/typescript-project-template/issues"
  },
  "homepage": "https://github.com/am-fernandes/typescript-project-template#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.0",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.57",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
